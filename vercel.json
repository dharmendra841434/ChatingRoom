{
  "projects": [
    {
      "name": "client",
      "root": "client",
      "buildCommand": "npm run build",
      "framework": "nextjs",
      "outputDirectory": ".next",
      "routes": [{ "src": "/api/(.*)", "dest": "../server/$1" }]
    },
    {
      "name": "server",
      "root": "server",
      "outputDirectory": "dist",
      "buildCommand": "npm install && npm run build"
    }
  ]
}
